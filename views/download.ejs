    <title>File Sharing</title>
</head>
<body>
    
    <center>
    <div class="upload-container">
        <div class="card">
            <div class="upload-area">
                <div class="fileIcon">
                    <i class="fal fa-file-download fa-3x"></i>
                    
                </div>
            <h3>Download your file</h3><br>
            <p>Download link will expire after 24 hours</p>
            <p><strong><%= fileName %></strong></p>
            <p><%= parseInt(fileSize/1000) %> KB</p>
            
            <a href="<%= downloadLink %>"><button class="btn btn-sm btn-primary">Download</button></a>
        </div>
        </div>
    </div>
</center>






    
